# transcription service environment configuration
# copy this file to .env and modify values as needed

# directory paths (use absolute paths in production)
TRANSCRIPTION_TEMP_DIR=/path/to/your/transcription/.temp
TRANSCRIPTION_DB_PATH=/path/to/your/transcription/transcription.db
TRANSCRIPTION_STATS_DIR=/path/to/your/transcription/.stats
WHISPER_CACHE_DIR=/path/to/your/transcription/whisper-cache

# server configuration
TRANSCRIPTION_HOST=localhost
TRANSCRIPTION_PORT=8080
TRANSCRIPTION_DEBUG=false

# flask security (CHANGE THIS IN PRODUCTION!)
FLASK_SECRET_KEY=your-very-secure-secret-key-here

# whisper model configuration
WHISPER_MODEL=base.en
TRANSCRIPTION_MAX_WORKERS=3

# cloudflare tunnel configuration (optional)
CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token-here
